    <script>
        let sensorData = {
            moisture: 42,
            ph: 6.8,
            temp: 22,
            npk: {n:18, p:12, k:15},
            health: 72
        };

        let fieldZones = [
            {x:20, y:20, r:60, status:'healthy'},
            {x:70, y:30, r:40, status:'dry'},
            {x:40, y:70, r:30, status:'poor'}
        ];

        // Initialize dashboard
        function initDashboard() {
            updateSensors();
            renderFieldMap();
            startSensorSimulation();
        }

        function updateSensors() {
            document.getElementById('soilHealth').textContent = sensorData.health + '%';
            document.getElementById('moisture').textContent = sensorData.moisture + '%';
            document.getElementById('ph').textContent = sensorData.ph;
            document.getElementById('temp').textContent = sensorData.temp + '¬∞C';
            document.getElementById('nPk').textContent = `N:${sensorData.npk.n} P:${sensorData.npk.p} K:${sensorData.npk.k}`;
            
            // Update gauge
            const gauge = document.getElementById('soilGauge');
            gauge.style.width = sensorData.health + '%';
        }

        function renderFieldMap() {
            const map = document.getElementById('fieldMap');
            map.innerHTML = fieldZones.map((zone, i) => 
                `<div class="field-zone zone-${zone.status}" 
                     style="left: ${zone.x}%; top: ${zone.y}%; width: ${zone.r*2}px; height: ${zone.r*2}px;"></div>`
            ).join('');
        }

        function analyzeField() {
            sensorData.health = Math.max(30, Math.min(95, 
                (sensorData.moisture * 0.4 + 
                 ((sensorData.ph-5)/2 * 20) + 
                 (sensorData.npk.n/40 * 25) + 
                 (35 - Math.abs(sensorData.temp-25)) * 0.5)
            ));
            updateSensors();
            generateRecommendations();
        }

        function generateRecommendations() {
            const recs = document.getElementById('recommendations');
            let message = '';
            
            if (sensorData.health < 50) {
                message = '‚ö†Ô∏è CRITICAL: Immediate intervention required!<br>';
                if (sensorData.moisture < 30) message += 'Increase irrigation by 40%. ';
                if (sensorData.ph < 5.5 || sensorData.ph > 7.5) message += 'Apply pH correction. ';
            } else if (sensorData.health < 70) {
                message = '‚ö° IMPROVE: ';
                if (sensorData.moisture < 35) message += 'Increase watering schedule. ';
                if (sensorData.npk.n < 15) message += 'Apply nitrogen fertilizer. ';
            } else {
                message = '‚úÖ OPTIMAL conditions!<br>';
                message += `Current yield projection: ${(sensorData.health/100 * 95).toFixed(0)} bu/acre`;
            }
            
            recs.innerHTML = `<strong>${message}</strong>`;
        }

        function applyRecommendations() {
            // Simulate auto-actions
            sensorData.moisture = Math.min(50, sensorData.moisture + 8);
            sensorData.npk.n = Math.min(25, sensorData.npk.n + 3);
            analyzeField();
            alert('‚úÖ Auto-actions applied! Drones dispatched for precision treatment.');
        }

        // Real-time sensor simulation
        function startSensorSimulation() {
            setInterval(() => {
                sensorData.moisture += (Math.random() - 0.5) * 4;
                sensorData.ph += (Math.random() - 0.5) * 0.3;
                sensorData.temp += (Math.random() - 0.5) * 2;
                sensorData.npk.n += (Math.random() - 0.5) * 2;
                
                sensorData.moisture = Math.max(20, Math.min(60, sensorData.moisture));
                sensorData.ph = Math.max(5.5, Math.min(7.5, sensorData.ph));
                sensorData.temp = Math.max(15, Math.min(35, sensorData.temp));
                
                analyzeField();
            }, 3000);
        }

        // Initialize
        window.onload = initDashboard;
    </script>
</body>
